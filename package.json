    "vuelidate": "0.7.4",
    "vuex": "3.1.0",
    "websocket-stream": "5.3.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "lint-prepush"
    }
  },
  "lint-prepush": {
    "base": "develop",
    "tasks": {
      "*.{js,vue}": [
        "eslint --fix",
        "jest --bail --coverage --findRelatedTests",
        "git add"
      ],
      "*.{css,vue}": [
        "stylelint --fix",
        "git add"
      ]
    }
  }
}
